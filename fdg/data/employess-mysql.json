{
    "$meta": {
        "description": "database schema for employees, departments, titles and their salaries"
    },
    "database": {
        "dbtype": "mysql",
        "drivername": "mysql+mysqlconnector",
        "username": "root",
        "password": "",
        "host": "localhost",
        "database": "company",
        "echo": false
    },
    "tables": [
        {
            "name": "employees",
            "columns": [
                {
                    "name": "customer_id",
                    "type": {
                        "name": "integer"
                    },
                    "options": {
                        "primary_key": true
                    }
                },
                {
                    "name": "first_name",
                    "type": {
                        "name": "string", "args": {
                            "length": 35
                        }
                    },
                    "options": {
                        "nullable": false
                    }
                },
                {
                    "name": "last_name",
                    "type": {
                        "name": "string", "args": {
                            "length": 35
                        }
                    },
                    "options": {
                        "nullable": false
                    }
                },
                {
                    "name": "gender",
                    "type": {
                        "name": "string", "args": {
                            "length": 2
                        }
                    },
                    "options": {
                        "nullable": false
                    }
                },
                {
                    "name": "email",
                    "type": {
                        "name": "string", "args": {
                            "length": 50
                        }
                    },
                    "options": {
                        "nullable": false,
                        "unique": true
                    }
                },
                {
                    "name": "address",
                    "type": {
                        "name": "string", "args": {
                            "length": 150
                        }
                    },
                    "options": {
                        "nullable": false
                    }
                },
                {
                    "name": "dob",
                    "type": {
                        "name": "date", "args": {}
                    },
                    "options": {
                        "nullable": false
                    }
                }, 
                {
                    "name": "hire_date",
                    "type": {
                        "name": "date", "args": {}
                    },
                    "options": {
                        "nullable": false
                    }
                }
            ]
        },
        {
            "name": "departments", 
            "columns": [
                {
                    "name": "id",
                    "type": "integer",
                    "options": {
                        "primary_key": true
                    }
                },
                {
                    "name": "name",
                    "type": {
                        "name": "string",  "args": {
                            "length": 35
                        }
                    },
                    "options": {
                        "nullable": false,
                        "unique": true
                    }
                }
            ]
        },
        {
            "name": "dept_manager",
            "columns": [
                {
                    "name": "id",
                    "type": "integer",
                    "options": {
                        "primary_key": true
                    }
                },
                {
                    "name": "employee_id",
                    "type": {
                        "name": "foreign", 
                        "args": {
                            "name": "employees.id", "ondelete": "cascade"
                        }
                    },
                    "options": {
                        "nullable": false,
                        "key": "employee_id"
                    }
                },
                {
                    "name": "department_id",
                    "type": {
                        "name": "foreign", 
                        "args": {
                            "name": "departments.id", "ondelete": "cascade"
                        }
                    },
                    "options": {
                        "nullable": false
                    }
                },
                {
                    "name": "from_date",
                    "type": {
                        "name": "date", "args": {}
                    },
                    "options": {
                        "nullable": false
                    }
                },
                {
                    "name": "to_date",
                    "type": {
                        "name": "date", "args": {}
                    },
                    "options": {
                        "nullable": false
                    }
                }
            ],
            "indexes": [
                {
                    "name": "employee_id__department_id",
                    "columns": ["employee_id", "department_id"]
                }
            ]
        }
    ],
    "populate": [
        {
            "name": "customers",
            "count": 999,
            "fields": [
                {
                    "name": "first_name",
                    "generator": "person.first_name"
                }, 
                {
                    "name": "last_name",
                    "generator": "person.last_name"
                }, 
                {
                    "name": "gender",
                    "generator": "person.gender"
                }, 
                {
                    "name": "email",
                    "generator": "person.email"
                },
                {
                    "name": "address",
                    "generator": "address"
                },
                {
                    "name": "dob",
                    "generator": "date_of_birth",
                    "args": {
                        "minimum_age": 16, "maximum_age": 60
                    }
                }
            ]
        },
        {
            "name": "products",
            "count": 99,
            "fields": [
                {
                    "name": "name",
                    "generator": "random_from", 
                    "args": ["hat", "cap", "shirt", "sweater", "sweatshirt", "shorts", "jeans", "sneakers", "boots", "coat", "accessories"]
                },
                {
                    "name": "price",
                    "generator": "random_int",
                    "args": {
                        "min": 499, "max": 99999, "step": 500
                    }
                }
            ]
        },
        {
            "name": "stores",
            "count": 20,
            "fields": [
                {
                    "name": "address",
                    "generator": "address"
                }
            ]
        },
        {
            "name": "transactions",
            "count": 4999,
            "fields": [
                {
                    "name": "transaction_date",
                    "generator": "random_date",
                    "args": {
                        "duration": -30
                    }
                },
                {
                    "name": "customer_id",
                    "generator": "db_random_item", 
                    "args": "customers.customer_id"
                },
                {
                    "name": "store_id",
                    "generator": "db_random_item", 
                    "args": "stores.store_id"
                },
                {
                    "name": "product_id",
                    "generator": "db_random_item", 
                    "args": "products.product_id"
                }
            ]
        }
    ]
}